<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.example.objectanimatort.MainActivity">

    <TextView
        android:id="@+id/tv_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:text="alpha"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:text="rotation"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_rotationX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:text="rotationX"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_rotationY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:text="rotationY"
            android:textColor="#FFF" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_translationX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:text="translationX"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tv_translationY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:text="translationY"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tv_scaleX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:layout_gravity="center"
        android:text="scaleX"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tv_scaleY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:layout_gravity="center"
        android:text="scaleY"
        android:textColor="#FFF" />
    <com.example.objectanimatort.CircleView
        android:id="@+id/circleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
